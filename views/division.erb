<h1><%=@division.name%></h1>
<h3>Employees List</h3>


  <p>Here are all your employees for <%=@division.name%> division:</p>

  <ul>
    <% @employees.each do |employee| %>
      <li> <a href="/employee_edit/<%= employee.id %>"> <%= employee.name %></a></li>
    <% end %>
  </ul>


<h2>Add an employee!</h2>
<form action="/division/<%=@division.id%>" method="post">
  <div class="form-group">
    <label for="name">Employee: </label>
    <input id="employee_name" name="name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-warning">Add Employee</button>
</form>

<a href="/division_edit/<%=@division.id%>">Edit division</a>
