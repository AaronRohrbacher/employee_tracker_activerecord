<h1>Employees List</h1>


  <p>Here are all your employees:</p>

  <ul>
    <% @employees.each do |employee| %>
      <li> <a href="/employee_edit/<%= employee.id %>"> <%= employee.name %></a></li>
    <% end %>
  </ul>

<h1>Divisions List</h1>


  <p>Here are all your divisions:</p>

  <ul>
    <% @divisions.each do |division| %>
      <li> <a href="/division/<%= division.id %>"> <%= division.name %></a></li>
    <% end %>
  </ul>

<h2>Add a division!</h2>
<form action="/" method="post">
  <div class="form-group">
    <label for="division_name">Division: </label>
    <input id="division_name" name="division_name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-warning">Add Divsion</button>
</form>
